{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ES2015", "ESNext"],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./dist"]
}
